import { useState } from 'react';
import { useToast } from '@/hooks/use-toast';
import { UnifiedSecurityService } from '@/services/unifiedSecurityService';

interface SpillData {
  topic: string;
  teaText: string;
  mediaUrl?: string;
}

export const useSpillTeaForm = (
  onSubmit: (data: SpillData) => Promise<void>,
  isLoading: boolean
) => {
  const [formData, setFormData] = useState<SpillData>({
    topic: 'general',
    teaText: '',
    mediaUrl: ''
  });
  
  const [errors, setErrors] = useState<Partial<SpillData>>({});
  const { toast } = useToast();

  if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('useSpillTeaForm - Current form data:', formData);
  if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('useSpillTeaForm - Current errors:', errors);
  if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('useSpillTeaForm - isLoading:', isLoading);

  const validateForm = (): boolean => {
    if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('validateForm - Starting validation');
    const newErrors: Partial<SpillData> = {};

    const trimmedTeaText = formData.teaText.trim();
    if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('validateForm - Trimmed tea text:', trimmedTeaText);
    
    if (!trimmedTeaText) {
      newErrors.teaText = 'Please share some tea!';
      if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('validateForm - Error: Empty tea text');
    } else if (trimmedTeaText.length < 3) {
      newErrors.teaText = 'Tea must be at least 3 characters long';
      if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('validateForm - Error: Tea too short');
    } else if (trimmedTeaText.length > 2000) {
      newErrors.teaText = 'Tea must be less than 2000 characters';
      if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('validateForm - Error: Tea too long');
    }

    // Validate media URL if provided
    if (formData.mediaUrl && formData.mediaUrl.trim()) {
      const urlPattern = /^https?:\/\/.+/;
      if (!urlPattern.test(formData.mediaUrl.trim())) {
        newErrors.mediaUrl = 'Please enter a valid URL starting with http:// or https://';
        if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('validateForm - Error: Invalid media URL');
      }
    }

    if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('validateForm - New errors:', newErrors);
    setErrors(newErrors);
    const isValid = Object.keys(newErrors).length === 0;
    if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('validateForm - Form is valid:', isValid);
    return isValid;
  };

  const handleSubmit = async (e: React.FormEvent) => {
    if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('handleSubmit - Form submission started');
    e.preventDefault();
    
    if (isLoading) {
      if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('handleSubmit - Already loading, preventing duplicate submission');
      return;
    }
    
    if (!validateForm()) {
      if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('handleSubmit - Validation failed');
      toast({
        title: "Validation Error",
        description: "Please fix the errors above before submitting.",
        variant: "destructive"
      });
      return;
    }

    try {
      if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('handleSubmit - Using unified security service for validation');
      
      // Use unified security service for validation
      const securityCheck = await UnifiedSecurityService.validateSubmissionSecurity(
        formData.teaText,
        formData.mediaUrl ? [formData.mediaUrl] : [],
        'spill_tea'
      );

      if (!securityCheck.rateLimitCheck.allowed) {
        toast({
          title: "Rate Limit Exceeded",
          description: securityCheck.rateLimitCheck.blockedReason || "Please wait before submitting again.",
          variant: "destructive"
        });
        return;
      }

      if (!securityCheck.contentValidation.valid) {
        toast({
          title: "Content Validation Failed",
          description: `Issues detected: ${securityCheck.contentValidation.threats.join(', ')}`,
          variant: "destructive"
        });
        return;
      }

      const sanitizedData: SpillData = {
        topic: formData.topic,
        teaText: securityCheck.contentValidation.sanitized,
        mediaUrl: securityCheck.urlValidation.valid[0] || undefined
      };
      
      if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('handleSubmit - Calling onSubmit with sanitized data:', sanitizedData);
      await onSubmit(sanitizedData);
      
      if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('handleSubmit - Submission successful, resetting form');
      // Reset form on successful submission
      setFormData({
        topic: 'general',
        teaText: '',
        mediaUrl: ''
      });
      setErrors({});
      
    } catch (error) {
      if (process.env.NODE_ENV === "development") { console.error('handleSubmit - Form submission error:', error);
      
      // Show error toast here since parent might not handle it
      toast({
        title: "Submission Failed",
        description: error instanceof Error ? error.message : 'An unexpected error occurred',
        variant: "destructive"
      });
    }
  };

  const clearError = (field: keyof SpillData) => {
    if (errors[field]) {
      if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('clearError - Clearing error for field:', field);
      setErrors(prev => ({ ...prev, [field]: undefined }));
    }
  };

  const updateFormData = (updates: Partial<SpillData>) => {
    if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('updateFormData - Updating with:', updates);
    setFormData(prev => {
      const newData = { ...prev, ...updates };
      if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('updateFormData - New form data:', newData);
      return newData;
    });
  };

  const isFormValid = formData.teaText.trim().length >= 3;
  if (process.env.NODE_ENV === "development") { if (process.env.NODE_ENV === "development") { console.log('useSpillTeaForm - isFormValid:', isFormValid);

  return {
    formData,
    errors,
    handleSubmit,
    clearError,
    updateFormData,
    isFormValid
  };
};

export type { SpillData };
